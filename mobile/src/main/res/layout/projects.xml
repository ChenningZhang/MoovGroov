<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:id="@+id/projectsList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/project1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:layout_marginBottom="400dp">

        <TextView
            android:id="@+id/sound1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Project1"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/list_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="20dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound1_name"
            android:layout_alignStart="@+id/sound1_name" />

        <TextView
            android:id="@+id/project1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="00:02:19"
            android:textColor="#0ABAB5"
            android:layout_marginRight="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="300dp">

        <TextView
            android:id="@+id/sound2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Project2"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="20dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound2_name"
            android:layout_alignStart="@+id/sound2_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="00:02:19"
            android:textColor="#0ABAB5"
            android:layout_marginRight="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout2"
        android:clickable="true"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="200dp">

        <TextView
            android:id="@+id/sound3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Project3"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="20dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound3_name"
            android:layout_alignStart="@+id/sound3_name" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="00:02:43"
            android:textColor="#0ABAB5"
            android:layout_marginRight="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/project4"
        android:clickable="true"
        android:layout_marginTop="105dp"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/sound4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Project4"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="20dp"
            android:text="by BLANC"
            android:textColor="#ffffff"
            android:layout_below="@+id/sound4_name"
            android:layout_alignStart="@+id/sound4_name" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="00:01:08"
            android:textColor="#0ABAB5"
            android:layout_marginRight="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_new_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:padding="40dp"
        android:background="@drawable/new_button"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="270dp" />

</RelativeLayout>