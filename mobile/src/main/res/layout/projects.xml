<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:id="@+id/projectsList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/sound1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Project1"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/list_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:textSize="20dp"
        android:text="by BLANC"
        android:textColor="#ffffff"
        android:layout_below="@+id/sound1_name"
        android:layout_alignStart="@+id/sound1_name" />

    <TextView
        android:id="@+id/project1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="00:02:19"
        android:textColor="#0ABAB5"
        android:layout_marginRight="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp" />

    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_new_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:padding="40dp"
        android:background="@drawable/new_button"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="270dp" />

</RelativeLayout>